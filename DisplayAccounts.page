<apex:page controller="DisplayAccounts">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockTable value="{!accountList}" var="acc">
                <apex:column value="{!acc.Name}"/>
                <apex:column value="{!acc.Id}"/>
                <apex:column value="{!acc.industry}"/>
            </apex:pageBlockTable>
        </apex:pageBlock> 
    </apex:form>
</apex:page>